---
import BrandPage from "@/components/brands/BrandPage.astro";

const IRWIN = {
  title: "IRWIN",
  subtitle: "Innovación para la Precisión",
  introduction: `IRWIN se destaca como líder en herramientas de sujeción y corte, diseñadas para profesionales que
  requieren precisión y confiabilidad. Su enfoque en el desarrollo de productos garantiza superar los
  estándares de calidad.`,
  cards: [
    {
      title: "Precisión y Seguridad",
      description:
        "Diseños ergonómicos y seguros para un trabajo eficiente",
    },
    {
      title: "Durabilidad",
      description:
        "Herramientas fabricadas con materiales de alta resistencia",
    },
    {
      title: "Variedad de Aplicaciones",
      description:
        "Soluciones para carpintería, metalurgia y más",
    },
    {
      title: "Innovación Constante",
      description:
        "Productos que integran tecnología avanzada y ergonomía",
    },
  ],
  timeline: [
    {
      title: "1885",
      description: `Charles IRWIN patenta la broca "Auger Bit", sentando las bases de la marca.`,
    },
    {
      title: "1924",
      description:
        "Introducción de las tenazas de presión Vise-Grip®, revolucionando el mercado",
    },
    {
      title: "1993",
      description:
        "Adquisición de Record Tools, ampliando su portafolio con herramientas de sujeción.",
    },
    {
      title: "2002",
      description:
        "Relanzamiento global como IRWIN Industrial Tools, consolidando su identidad.",
    },
    {
      title: "2016",
      description:
        "Adquisición por Stanley Black & Decker, reforzando su alcance y desarrollo.",
    },
    {
      title: "Actualidad",
      description:
        "Innovando con productos como las hojas de sierra Marathon® y herramientas para entornos industriales.",
    },
  ],
  path: [
    {
      name: "Inicio",
      href: "/",
    },
    {
      name: "IRWIN",
      href: "/marcas/IRWIN",
      current: true,
    },
  ],
  galeryImages: [
    "/assets/brands/IRWIN/IRWIN-1.png",
    "/assets/brands/IRWIN/IRWIN-2.png",
    "/assets/brands/IRWIN/IRWIN-3.png",
    "/assets/brands/IRWIN/IRWIN-4.png",
  ],
};
---

<BrandPage
  title={IRWIN.title}
  subtitle={IRWIN.subtitle}
  introduction={IRWIN.introduction}
  cards={IRWIN.cards}
  timeline={IRWIN.timeline}
  path={IRWIN.path}
  galeryImages={IRWIN.galeryImages}
/>
