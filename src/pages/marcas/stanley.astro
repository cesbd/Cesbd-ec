  ],
  galeryImages: [
    "/assets/brands/STANLEY/STANLEY-1.png",
    "/assets/brands/STANLEY/STANLEY-3.png",
    "/assets/brands/STANLEY/STANLEY-5.png",
    "/assets/brands/STANLEY/STANLEY-7.png",
  ],
};
---

<BrandPage
  title={stanley.title}
  subtitle={stanley.subtitle}
  introduction={stanley.introduction}
  cards={stanley.cards}
