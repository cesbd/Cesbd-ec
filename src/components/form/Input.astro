---
const { name, id, placeholder, label, type = 'text' } = Astro.props;
---

<div class="sm:col-span-4">
  <label for={id} class="block text-md font-medium text-gray-800">{label}</label>
  <div class="mt-2">
    <div class="flex items-center rounded-md bg-white outline outline-1 -outline-offset-1 outline-gray-300 focus-within:outline focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-amber-400">
      <input type={type} name={name} id={id} class="block py-2 pr-3 text-lg text-gray-900 placeholder:text-gray-400 focus:outline focus:outline-0 sm:text-sm/6 shadow-sm w-full pl-4" placeholder={placeholder}>
    </div>
  </div>
</div>
