---
interface Props {
  alertTitle: string;
  alertMessage?: string;
  html?: string;
  type?: 'success' | 'error';
}

const { alertTitle, alertMessage, html, type = 'success' } = Astro.props;
---

<div
  class={`${type === 'error' ? 'bg-rose-100 border-rose-500 text-rose-900': 'bg-teal-100 border-teal-500 text-teal-900'} border-t-4 rounded-b px-4 py-3 shadow-md rounded-lg`}
  role="alert"
>
  <div class="flex">
    <div class="py-1">
      <svg
        class={`fill-current h-6 w-6 ${type === 'error' ? 'text-rose-500' : 'text-teal-500'} mr-4`}
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
      >
        <path
          d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"
        ></path>
      </svg>
    </div>
    <div>
      <p class="font-bold">{alertTitle}</p>
      <p class="text-sm" set:html={html}>
        {alertMessage}
      </p>
    </div>
  </div>
</div>
